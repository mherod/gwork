{
  "name": "gwork",
  "version": "0.3.2",
  "description": "A CLI tool for managing Google Calendar and Gmail from the command line",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "gwork": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/cli.ts --outfile=dist/cli.js --target=node --minify --external better-sqlite3 --define __BUILD_TIME__=$(date -u +'\"%Y-%m-%dT%H:%M:%SZ\"')",
    "dev": "bun src/cli.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "node -e \"require('better-sqlite3')\" 2>/dev/null || npm rebuild better-sqlite3 2>/dev/null || npm install better-sqlite3 2>/dev/null || true",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bun test tests/e2e",
    "test:ci": "bun test --coverage --bail"
  },
  "keywords": [
    "gmail",
    "calendar",
    "google",
    "cli",
    "command-line",
    "email",
    "events",
    "productivity"
  ],
  "author": {
    "name": "Matthew Herod",
    "email": "matthew.herod@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mherod/gwork.git"
  },
  "bugs": {
    "url": "https://github.com/mherod/gwork/issues"
  },
  "homepage": "https://github.com/mherod/gwork#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/lodash-es": "^4.17.12",
    "@types/nodemailer": "^7.0.10",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "pnpm": {
    "overrides": {
      "minimatch": ">=10.2.1",
      "glob": ">=13.0.6",
      "rimraf": ">=6.1.3",
      "node-domexception": ">=2.0.2"
    }
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "date-fns": "^4.1.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^168.0.0",
    "lodash-es": "^4.17.21",
    "nodemailer": "^8.0.1",
    "open": "^11.0.0",
    "ora": "^9.0.0",
    "rrule": "^2.8.1"
  }
}
